{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"printWidth": 80,
				"trailingComma": "es5",
				"semi": true,
				"jsxSingleQuote": true,
				"singleQuote": true,
				"useTabs": true,
				"endOfLine": "auto",
				"max-len": ["error", { "code": 80 }]
			}
		]
	}
}
